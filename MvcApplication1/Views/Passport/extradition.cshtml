@{
    ViewBag.Title = "Подання заявки на отримання паспорту громадянина України";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="pass" class="featured">

        <h2>Подання заявки на отримання паспорту громадянина України</h2>
    <hr />
        @using (Html.BeginForm("extraditionS", "Passport", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            foreach (var validMassage in ViewBag.we)
            {<label style="color:red;">@validMassage</label>}

            foreach (var validMassage in ViewBag.mm)
            {<label style="color:red;">@validMassage</label>}


            foreach (var value in ViewBag.UserInf)
            {
            
            <h3>Загальні дані</h3>

  <div><label>Прізвище: </label><input type="text" name="surname" value="@value.Surname" /></div>

  <div><label>Ім`я: </label><input id="Text1" type="text" name="name" value="@value.Name" /></div>

  <div><label>По батькові: </label><input id="Text1" type="text" name="patronymic" value="@value.Patronymic" /></div> 
        
  <div><label>Дата народжння: </label><input id="Text1" type="date" name="DateOfBirth" value="@value.DateOfBirth" /></div> 

  <div><label>Місце народження: </label><input id="Text1" type="text" name="kingdom" value="Cело, місто..." /></div> 
        
  <div><label>Стать: </label><select id="Select1" name="gender">
                <option value="0">Чоловіча</option>
                <option value="1">Жіноча</option>
            </select></div> 
        <hr />
        
        
            <h3>Сімейний стан</h3>

    <div id="chbox"><label><input type="checkbox" name="marital_status" /> Не одружений/не заміжня</label></div>
    <div><label>Прізвище партнера: </label><input id="Text1" type="text" name="family_surname" /></div>

    <div><label>Ім’я партнера: </label><input id="Text1" type="text" name="family_name" /></div>
        
    <div><label>По-батькові партнера: </label><input id="Text1" type="text" name="family_patronymic" /></div>
        
    <div><label>Ким був зареєстрований: </label><input id="Text1" type="text" name="family_who_registered" /></div>
        
    <div><label>Коли був зареестрований: </label><input id="Text1" type="text" name="family_when_registered" /></div>
        
        <hr />
        
        <h3>Інформація про батьків</h3>
           <br />
        <h4>Мати</h4>
            <br />

    <div><label>Прізвище: </label><input id="Text1" type="text" name="mom_surname" /></div>

    <div><label>Ім’я: </label><input id="Text1" type="text" name="mom_name" /></div>
            
    <div><label>По батькові: </label><input id="Text1" type="text" name="mom_patronymic" /></div>
             
            
            <br />
            <h4>Батько</h4>
             <br />

    <div><label>Прізвище: </label><input id="Text1" type="text" name="father_surname" /></div>

    <div><label>Ім’я: </label><input id="Text1" type="text" name="father_name" /></div>
            
    <div><label>По батькові: </label><input id="Text1" type="text" name="father_patronymic" /></div>
            
            <hr />
            <h3>Місце проживання</h3>
    <div><label>Місто: </label><input id="Text1" type="text" name="residence_city" /></div>
            
    <div><label>Вулиця: </label><input id="Text1" type="text" name="residence_house" /></div>
            
    <div><label>Будинок: </label><input id="Text1" type="text" name="residence_apartment" /></div>
            
            <hr />
            <h3>Іноземне громадянство</h3>
            
    <div id="chbox"><label><input type="checkbox" name="foreign_citizenship" />Не маю</label></div>
            
    <div><label>Країна: </label><input id="Text1" type="text" name="foreign_citizenship_where" /></div>
            
    <div><label>Дата прийняття громадянство України: </label><input id="Text1" type="text" name="foreign_citizenship_now" /></div>
            
    <div><label>Прошу видати (замінити) паспорт у зв'язку  з: </label><input id="Text1" type="text" name="reason_for_issuing" /></div>
            
    <div><label>Дата заповнення: </label><input id="Text1" type="text" name="date_of_filling" /></div>
            
            <h2>Загрузка фото</h2>      
             <input type="file" name="fileUpload" /><br />              

            <input type="submit" name="save"class="btn" value="Подати заявку" />

            }
        }
</section>